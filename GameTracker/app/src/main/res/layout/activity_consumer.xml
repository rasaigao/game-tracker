<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activity.ConsumerActivity">
    <Button
        android:id="@+id/button_gs"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="Grocery Store (Cost: 15, Consumption: 10)"/>
    <Button
        android:id="@+id/button_school"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="School (Cost: 30, Consumption: 15"/>
    <Button
        android:id="@+id/button_ch"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="City Hall (Cost: 100, Consumption: 20)"/>
    <Button
        android:id="@+id/button_hosp"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="Hospital (Cost: 200, Consumption: 55)"/>
    <TextView
        android:id="@+id/balance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="32sp"
        android:textColor="@color/colorBlack"
        android:text="$0"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Balance"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back_button1"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="Return "/>

</LinearLayout>
